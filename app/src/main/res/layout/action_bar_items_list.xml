<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@color/green_action_bar">

    <TextView
        android:id="@+id/current_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/add_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/style_add_button"
        android:src="@mipmap/add_icon"
        android:layout_marginRight="5sp"
        android:layout_marginEnd="5sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:id="@+id/share_list_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/share_icon"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/add_item"/>

    <ImageButton
        android:id="@+id/config_list_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/config_icon"
        android:background="@android:color/transparent"
        android:layout_toLeftOf="@+id/share_list_button"
        android:layout_alignParentTop="true"/>
</RelativeLayout>